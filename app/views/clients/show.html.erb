<% provide(:title, @client.name) %>
<div class="row">
  
    <div class="span12">
        <section>
  		    <h1><%= @client.name %></h1>

          <p><%= @client.contact_name %></p>
          <p><%= @client.contact_email %></p>
          <p><%= @client.contact_phone %></p>
          <p><%= @client.contact_address %></p>

          <p><%= @client.notes %></p>

          <%= link_to "delete", @client,
                    method: :delete, 
                    data: { confirm: "You sure?" }, 
                    title: @client.name %>

  		    <!-- <p><%= Faker::Lorem.sentence(10) %></p> -->

  		    <h3>Projects</h3>
  		    <ul class="projects">
                <%= render @projects %>
            </ul>
        </section>
    
  </div>
</div>