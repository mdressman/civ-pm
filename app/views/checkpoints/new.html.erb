<% provide(:title, 'New Checkpoint') %>
<h1>New Checkpoint</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for ([@milestone, @checkpoint]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <h2>Project: <%= @milestone.project.name %></h2>
      <h2>Milestone: <%= @milestone.name %></h2>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :start %>
      <%= f.date_field :start %>

      <%= f.label :end %>
      <%= f.date_field :end %>

      <%= f.submit "Create checkpoint", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>