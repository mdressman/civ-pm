<% provide(:title, 'New Project') %>
<h1>New Project</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@project) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :start_date %>
      <%= f.date_field :start_date %>

      <%= f.label :team %>
      <%= f.text_field :team %>

      <%= f.submit "Create project", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>