<% provide(:title, @asset.name) %>
<div class="row">
  
  <div class="span12">
  	<section>
  		<h1><%= @asset.name %></h1>

  		
      <p>
          <%= link_to "edit", edit_client_project_asset_path(@client.id, @asset.project_id, @asset) %> | 
          <%= link_to "delete", client_project_asset_path(@client.id, @asset.project_id, @asset),method: :delete, data: { confirm: "You sure?" }, title: @asset.name %>
      </p>


  		<p>Client: <%= Client.find_by(@project.client_id).name %></p>
      <p>Project: <%= @project.name %></p>
  		<% if @asset.expected_date? %><p>Expected Date: <%= @asset.expected_date.strftime('%m/%d/%Y') %></p> <% end %>
      <p>Received?: <%= @asset.received? %></p>
      <p>Link: <%= @asset.link %></p>
      <!-- <p>TODO: Received Date</p> -->
  	</section>
    
  </div>
</div>