<% provide(:title, @milestone.name) %>
<div class="row">
  
    <div class="span12">
        <section>
            <h1>Client: <%= @client.name %></h1>
            <h2>Project: <%= @project.name %></h2>
            <h3>Milestone: <%= @milestone.name %></h3>
            
            <p>
                <%= link_to "edit", edit_client_project_milestone_path(@client.id, @milestone.project_id, @milestone) %> | 
                <%= link_to "delete", client_project_milestone_path(@client.id, @milestone.project_id, @milestone),method: :delete, data: { confirm: "You sure?" }, title: @milestone.name %>
            </p>

            <p>Estimated time: <%= @milestone.estimated_time %></p>
            <p>Actual time: <%= @milestone.actual_time %></p>
            <p>Estimated date: <%= @milestone.estimated_date.strftime('%m/%d/%Y') %></p>
            <p>Beginning of week: <%= @milestone.estimated_date.beginning_of_week.strftime('%m/%d/%Y') %></p>
            <p>End of week: <%= @milestone.estimated_date.end_of_week(start_day=:saturday).strftime('%m/%d/%Y') %></p>
            <p>Actual date: <%= @milestone.actual_time %></p>
            
        </section>
    </div>
</div>