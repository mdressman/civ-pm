<% provide(:title, @milestone.name) %>
<div class="row">
  
  <div class="span12">
  	<section>
  		<h1><%= @milestone.name %></h1>

  		<%= link_to "delete", @milestone, method: :delete, 
  									 data: { confirm: "You sure?" }, 
  									 title: @milestone.name %>

  		<p><%= @milestone.project_id %></p>
  		<p><%= @milestone.end %></p>
  		<p><%= @milestone.milestone_type %></p>
  	</section>
    
  </div>
</div>