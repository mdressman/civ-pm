<% provide(:title, 'Edit Milestone') %>
<h1>Edit Milestone for <%= @project.name %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for ([@project, @milestone]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.hidden_field :project_id, :value => params[:project_id] %>

      <%= f.label :type %>
      <%= select(:milestone, :milestone_type, options_for_select( [ ['Design Interface','design_int'], ['Develop Website','dev_web'], ['Branding','design_branding'], ['Print Design','design_print'] ]), {include_blank: 'Other'} ) %>

      <%= f.label :start_date %>
      <%= f.date_field :start_date %>

      <%= f.label :end_date %>
      <%= f.date_field :end_date %>

      <%= f.label :user_id, "Owner" %>
      <%= collection_select(:milestone, :user_id, User.all, :id, :name) %>

	    <%= f.label :estimate %>
      <%= f.number_field :estimate %>      

      <%= f.submit "Edit milestone", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>