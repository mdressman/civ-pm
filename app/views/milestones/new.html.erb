<% provide(:title, 'New Milestone') %>
<h1>New Milestone for <%= @project.name %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for ([@project, @milestone]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.hidden_field :project_id, :value => params[:project_id] %>

      <%= f.label :type, "Name" %>
      <%= select(:milestone, :milestone_type, options_for_select( [ ['Interface Design','Interface Design'], ['Web Development','Web Development'], ['Branding','Branding'], ['Print Design','Print Design'], ['Custom','Custom'] ]), {:prompt => '-- Choose --'} ) %>

      <%= f.text_field :name %>

      <%= f.label :start_date %>
      <%= f.date_field :start_date %>

      <%= f.label :end_date %>
      <%= f.date_field :end_date %>

      <%= f.label :user_id, "Owner" %>
      <%= collection_select(:milestone, :user_id, User.all, :id, :name) %>

	    <%= f.label :estimate %>
      <%= f.number_field :estimate %>      

      <%= f.submit "Create milestone", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>