<% provide(:title, 'New Milestone - ' + @project.name) %>
<h1>New Milestone - <%= @project.name %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for([@project, @milestone]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

	    

      <%= f.label :start_date %>
      <%= f.date_field :start_date %>

      <%= f.label :deadline %>
      <%= f.date_field :deadline %>

      <%= f.label :user_id %>
      <%= collection_select(:milestone, :user_id, User.all, :id, :name) %>

	    <%= f.label :estimate %>
      <%= f.number_field :estimate %>      



      <%= f.submit "Create milestone", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>